{
  "title": "Wolf Curses",
  "copyright": "Maxwolf",
  "description": "Console control library",
  "language": "en-US",
  "version": "1.0.0-*",
  "buildOptions": {
    "optimize": true,
    "xmlDoc": true
  },
  "dependencies": {
    "Microsoft.Extensions.DependencyModel": "1.0.0",
    "NETStandard.Library": "1.6.0",
    "System.Linq": "4.1.0",
    "System.Reflection": "4.1.0",
    "System.Reflection.TypeExtensions": "4.1.0",
    "System.Threading.Thread": "4.0.0"
  },

  "frameworks": {
    "netstandard1.6": {
      "imports": "dnxcore50"
    }
  },

  "runtimes": {
    "win7-x64": {},
    "osx.10.10-x64": {},
    "ubuntu.14.04-x64": {}
  },

  "scripts": {
    "postcompile": [
      "dotnet pack --no-build --output nupkg --configuration %compile:Configuration%",
      "dotnet publish --no-build --output lib"
    ]
  }
}
